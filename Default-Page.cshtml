@{

    Layout = "~/_SiteLayout.cshtml";
    var db = Database.Open("e-Books");
    var selectCommand = "SELECT * FROM boeken";
    var searchTerm = "";

    var query = "SELECT * FROM boeken";
    var data = db.Query(query);
    var columns = new[] { "Titel", "Auteur", "Datum", "Waardering", "Taal", "Uitgever", "Genre" };
    var grid = new WebGrid(data, ajaxUpdateContainerId: "grid", columnNames: columns);


    var selectedData = db.Query(selectCommand, searchTerm);



}    
<!DOCTYPE html>
<html>
    <head>

    </head>
    <body>

        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-2">
                    <form class="panel">
                        <h4 align="center">Zoek Filter</h4>
                        <br /><br />
                        <div id="custom-search-input">
                            <div class="input-group col-xs-12">
                                <input type="text" class="form-control input-lg" placeholder="Buscar" />
                                <span class="input-group-btn">
                                    <button class="btn btn-info btn-lg" type="button">
                                        <i class="glyphicon glyphicon-search"></i>
                                    </button>
                                </span>
                            </div>
                        </div>
                        <br /><br />
                        <ul>
                            <li><label><input type="checkbox" name="Titel" />Titel</label></li>
                            <li><label><input type="checkbox" name="Auteur" />Auteur</label></li>
                            <li><label><input type="checkbox" name="Genre" />Genre</label></li>
                            <li><label><input type="checkbox" name="Waardering" />Waardering</label></li>
                            <li><label><input type="checkbox" name="Taal" />Taal</label></li>
                        </ul>

                    </form>
                </div>

                <div class="col-xs-8">
  
               <div id="popup" >
                       
                                     @grid.GetHtml(
                                         tableStyle: "table",
                                         headerStyle: "head",
                                         alternatingRowStyle: "alt",
                                          columns: grid.Columns(
                      
                        grid.Column(format:
@<a download="@item.id-.pdf" href="~/uploads/@item.ID-.pdf" title="ImageName"><img alt="ImageName" src="~/Images/logo.gif" height="42" width="42"> 
<a style="display:none;" type="hidden">@item.id</a><span><img src="~/covers/@item.Id-.jpg" height="300" width="200" > </span></a>
   
                                                  ),                                
                                grid.Column("Titel"),
                                grid.Column("Auteur"),
                                grid.Column("Datum"),
                                grid.Column("Waardering"),
                                grid.Column("Taal"),
                                grid.Column("Uitgever"),
                                grid.Column("Genre")
                                     )
                                 )
   
        </a>
                     
                    </div>
                    @section script{
                        <script type="text/javascript">
                             $(function(){
                             $('tbody tr').hover( function(){
                             $(this).toggleClass('clickable');
                             }).on('click', function(){
                            location.href = '/uploads/' + $(this).find('td:first').text();
                             });
                             });
                       

    function imageAppear() { 
    document.getElementById('place-holder-1').style.visibility = "visible";}

    function imageDisappear() { 
    document.getElementById('place-holder-1').style.visibility = "hidden";}

    </script>

                    }
             </div>
               
                        </div>
                    </form>
                </div>
            </div>
        </div>









        <!-- JQuery Scripts-->
