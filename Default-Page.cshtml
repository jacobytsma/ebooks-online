@{
     if (!WebSecurity.IsAuthenticated)
    {
        Response.Redirect("~/LoginPage?returnUrl="
            + Request.Url.LocalPath);
    }

    Layout = "~/_SiteLayout.cshtml";

    var db = Database.Open("e-Books");
    var selectCommand = "SELECT * FROM boeken";
    var data = db.Query(selectCommand);
    var columns = new[] { "Titel", "Auteur", "Datum", "Waardering", "Taal", "Uitgever", "Genre" };
    var grid = new WebGrid(data, ajaxUpdateContainerId: "grid", columnNames: columns);

}
<!DOCTYPE html>
<html>
<head>

</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-2">
                <form class="panel">
                    <h4 style="text-align:center;">Zoek Filter</h4>
                    <div id="custom-search-input">
                        <div class="input-group col-xs-12">
                            <input type="text" class="form-control input-lg" placeholder="Boeken" />
                            <span class="input-group-btn">
                                <button class="btn btn-info btn-lg" type="button">
                                    <i class="glyphicon glyphicon-search"></i>
                                </button>
                            </span>
                        </div>
                    </div>
                    <section id="first" class="section">
                        <div class="container">
                            <input type="radio" name="group1" id="radio-1">
                            <label for="radio-1"><span class="radio">Titel</span></label>
                        </div>
                        <div class="container">
                            <input type="radio" name="group1" id="radio-2">
                            <label for="radio-2"><span class="radio">Auteur</span></label>
                        </div>
                        <div class="container">
                            <input type="radio" name="group1" id="radio-3">
                            <label for="radio-3"><span class="radio">Genre</span></label>
                        </div>
                        <div class="container">
                            <input type="radio" name="group1" id="radio-4">
                            <label for="radio-4"><span class="radio">Waardering</span></label>
                        </div>
                        <div class="container">
                            <input type="radio" name="group1" id="radio-5">
                            <label for="radio-5"><span class="radio">Taal</span></label>
                        </div>
                    </section>
                </form>
            </div>
            <!-- Middelste table-->
            <div class="col-xs-8">
                <div id="grid">
                    @grid.GetHtml(
                                         tableStyle: "table",
                                         headerStyle: "head",
                                         alternatingRowStyle: "alt",
                                          columns: grid.Columns(

                        grid.Column(format:
                        @<a style="display:none;" type="hidden">
                            @item.ID<a style="display:none;" type="hidden">-.pdf</a>
                        <a download="@item.id-.pdf" href="~/uploads/@item.ID-.pdf" title="ImageName">
                            <img alt="ImageName" src="~/Images/logo.gif" height="35" width="35">
                        </a>
                    </a>
                                                    ),


                                grid.Column("Titel"),
                                grid.Column("Auteur"),
                                grid.Column("Datum"),
                                grid.Column("Waardering"),
                                grid.Column("Taal"),
                                grid.Column("Uitgever"),
                                grid.Column("Genre")
                                     )
                                 )
                </div>
            </div>

            <div class="col-xs-2">
                <form class="panel">
                    <div style="text-align: center">
                        <img src="~/Images/child-reading-book_icon-icons.com_49293.png" height="60" width="60" alt="Book icon" class="img-rounded">
                    </div>
                    <br />
                    <div style="width: 80%;display: block;margin: 0 auto;">
                        <div style="display:inline-block;width: calc(50% - 2px)">
                            <p class="alignright">Titel:</p>
                            <div style="clear: both;"></div>
                            <p class="alignright">Auteur:</p>
                            <div style="clear: both;"></div>
                            <p class="alignright">Taal:</p>
                            <div style="clear: both;"></div>
                            <p class="alignright">Waardering:</p>
                            <div style="clear: both;"></div>
                            <p class="alignright">Genre:</p>
                            <div style="clear: both;"></div>
                        </div>
                        <div style="display:inline-block;width: calc(50% - 2px)">
                            <p class="alignleft">.......</p>
                            <div style="clear: both;"></div>
                            <p class="alignleft">.......</p>
                            <div style="clear: both;"></div>
                            <p class="alignleft">.......</p>
                            <div style="clear: both;"></div>
                            <p class="alignleft">.......</p>
                            <div style="clear: both;"></div>
                            <p class="alignleft">.......</p>
                            <div style="clear: both;"></div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        @section script{
            <script type="text/javascript">
                $(function () {
                    $('tbody tr').hover(function () {
                        $(this).toggleClass('clickable');
                    }).on('click', function () {
                        location.href = '/Details/' + $(this).find('td:first').text();
                    });
                });
            </script>
        }
    </div>


    <!-- JQuery Scripts-->
    <script src="https://code.jquery.com/jquery-3.2.1.js"
            integrity="sha256-DZAnKJ/6XZ9si04Hgrsxu/8s717jcIzLy3oi35EouyE="
            crossorigin="anonymous"></script>
</body>
</html>
